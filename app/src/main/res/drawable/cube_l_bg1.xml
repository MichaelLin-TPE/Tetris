    <solid android:color="#000000" />

    <stroke android:width="0.5dp"
        android:color="@color/white"/>

    <gradient
        android:startColor="#66CCCC"
        android:centerColor="#99CCCC"
        android:centerY="0.3"
        android:endColor="#66CCCC"
        android:angle="270"/>

    <gradient
        android:startColor="#66CCCC"
        android:centerColor="#99CCCC"
        android:centerY="0.7"
        android:endColor="#66CCCC"
        android:angle="270"/>

    <gradient
        android:startColor="#009999"
        android:centerColor="#00CCCC"
        android:centerY="0.3"
        android:endColor="#009999"
        android:angle="90"/>

    <gradient
        android:startColor="#009999"
        android:centerColor="#00CCCC"
        android:centerY="0.7"
        android:endColor="#009999"
        android:angle="90"/>
