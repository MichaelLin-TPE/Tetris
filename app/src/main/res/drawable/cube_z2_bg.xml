    <stroke android:width="0.5dp"
        android:color="@color/white"/>

    <gradient
        android:startColor="#008000"
        android:centerColor="#00FF00"
        android:centerY="0.3"
        android:endColor="#008000"
        android:angle="270"/>

    <gradient
        android:startColor="#008000"
        android:centerColor="#00FF00"
        android:centerY="0.7"
        android:endColor="#008000"
        android:angle="270"/>

    <gradient
        android:startColor="#003300"
        android:centerColor="#006600"
        android:centerY="0.3"
        android:endColor="#003300"
        android:angle="90"/>

    <gradient
        android:startColor="#003300"
