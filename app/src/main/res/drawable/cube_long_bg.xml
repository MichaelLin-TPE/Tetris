<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="#000000" />

    <stroke android:width="0.5dp"
        android:color="@color/white"/>

    <gradient
        android:startColor="#FF0000"
        android:centerColor="#FF8080"
        android:centerY="0.3"
        android:endColor="#FF0000"
        android:angle="270"/>

    <gradient
        android:startColor="#FF0000"
        android:centerColor="#FF8080"
        android:centerY="0.7"
        android:endColor="#FF0000"
        android:angle="270"/>

    <gradient
        android:startColor="#B20000"
        android:centerColor="#FF3333"
        android:centerY="0.3"
        android:endColor="#B20000"
        android:angle="90"/>

    <gradient
        android:startColor="#B20000"
        android:centerColor="#FF3333"
        android:centerY="0.7"
        android:endColor="#B20000"
        android:angle="90"/>

</shape>
